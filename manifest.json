{
    "required_api_version": "^2.0.0",
    "name": "Timestamp",
    "description": "Convert unix timestamp to readble date format",
    "developer_name": "Bruno Paz",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.5
    },
    "preferences": [
        {
            "id": "kw",
            "type": "keyword",
            "name": "Timestamp Keyword",
            "default_value": "ts"
        },
        {
            "id": "local_format",
            "type": "text",
            "name": "Output Format (Local Time)",
            "description": "Format used by strftime (https://strftime.org/)",
            "default_value": "%Y-%m-%d %H:%M:%S"
        },
        {
            "id": "utc_format",
            "type": "text",
            "name": "Output Format (UTC Time)",
            "description": "Format used by strftime (https://strftime.org/)",
            "default_value": "%Y-%m-%d %H:%M:%S"
        }
    ]
}
